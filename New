<body>
    <div class="container">
        <!-- Left Panel (Form) -->
        <div class="left-panel">

            <div class="form-row">
                <div class="form-group">
                    <label for="cid">CID</label>
                    <input type="text" id="cid">
                </div>
                <div class="form-group">
                    <label for="cprod">CPROD</label>
                    <input type="text" id="cprod">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="phone">Phone Number</label>
                    <input type="text" id="phone">
                </div>
                <div class="form-group">
                    <label for="caller">Caller Name</label>
                    <input type="text" id="caller">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="domain">Domain</label>
                    <input type="text" id="domain">
                </div>
                <div class="form-group">
                    <label for="auth">Auth</label>
                    <select id="auth">
                        <option value="">Choose</option>
                        <option value="YES">YES</option>
                        <option value="N/A">N/A</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="issue">Issue</label>
                <textarea id="issue"></textarea>
            </div>

            <div class="form-group">
                <label for="action">Action Taken / Modifications</label>
                <textarea id="action"></textarea>
            </div>

            <div id="pages"></div>
            <button type="button" onclick="addPage()">+ Add Page</button>

            <div class="form-group">
                <label for="osad">OSAD</label>
                <select id="osad">
                    <option value="">Choose</option>
                    <option value="YES">YES</option>
                    <option value="N/A">N/A</option>
                </select>
            </div>

            <button type="button" onclick="generateNote()">Generate & Copy Note</button>
            <button type="button" onclick="resetForm()">Reset</button>
        </div>

        <!-- Right Panel (Completed Notes) -->
        <div class="right-panel">
            <div id="output">
                <div id="copied-msg">Copied!</div>
                Notes will appear here...
            </div>
        </div>
    </div>

    <script>
        function addPage() {
            const pageSection = document.createElement('div');
            pageSection.classList.add('page-section');
            pageSection.innerHTML = `
                <label>Page</label>
                <input type="text" class="page-name">
                <label>Modifications</label>
                <textarea class="page-mods"></textarea>
            `;
            document.getElementById('pages').appendChild(pageSection);
        }

        function generateNote() {
            const cid = document.getElementById('cid').value.trim();
            const cprod = document.getElementById('cprod').value.trim();
            const phone = document.getElementById('phone').value.trim();
            const caller = document.getElementById('caller').value.trim();
            const domain = document.getElementById('domain').value.trim();
            const auth = document.getElementById('auth').value.trim();
            const issue = document.getElementById('issue').value.trim();
            const action = document.getElementById('action').value.trim();
            const osad = document.getElementById('osad').value.trim();

            let note = `**CID:** ${cid}\n` +
                       `**CPROD:** ${cprod}\n` +
                       `**PHONE NUMBER:** ${phone}\n` +
                       `**CALLER NAME:** ${caller}\n` +
                       `**DOMAIN:** ${domain}\n` +
                       `**AUTH:** ${auth}\n` +
                       `**ISSUE:** ${issue}\n` +
                       `**ACTION TAKEN / MODIFICATIONS**\n     – ${action.split('\n').join('\n     – ')}`;

            document.querySelectorAll('.page-section').forEach(sec => {
                const pageName = sec.querySelector('.page-name').value.trim();
                const mods = sec.querySelector('.page-mods').value.trim();
                if (pageName || mods) {
                    note += `\n**PAGE:** ${pageName}\n**MODIFICATIONS**\n     – ${mods.split('\n').join('\n     – ')}`;
                }
            });

            note += `\n**OSAD:** ${osad}`;

            // Show in output box
            const output = document.getElementById('output');
            output.textContent = note;

            // Copy to clipboard + show "Copied!" message
            navigator.clipboard.writeText(note).then(() => {
                const copiedMsg = document.getElementById('copied-msg');
                copiedMsg.style.display = 'inline';
                setTimeout(() => copiedMsg.style.display = 'none', 1500);
            });
        }

        function resetForm() {
            document.querySelectorAll('input, textarea, select').forEach(el => {
                el.value = '';
            });
            document.getElementById('pages').innerHTML = '';
            document.getElementById('output').textContent = 'Notes will appear here...';
        }
    </script>
</body>
</html>
