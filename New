        }
        .form-row .form-group {
            flex: 1;
            margin-bottom: 4px; /* spacing between groups */
        }
        label {
            display: block;
            margin-bottom: 2px; /* spacing under labels */
            font-weight: bold;
            color: white;
            font-size: 16px;
        }
        input, textarea, select {
            width: 100%;
            padding: 4px;
            margin-top: 2px;
            box-sizing: border-box;
            border-radius: 3px;
            border: 1px solid #ccc;
            font-size: 12px;
        }
        textarea {
            min-height: 50px;
            margin-bottom: 10px; /* spacing under labels */
        }
